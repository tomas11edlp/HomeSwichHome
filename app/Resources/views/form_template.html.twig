{% extends 'form_div_layout.html.twig' %}

{%- block form_row -%}
    <div>
        {{- form_label(form) -}}
        {{- form_widget(form) -}}
        {{- form_errors(form) -}}
    </div>
{%- endblock form_row -%}

{% block form_errors %}
    {%- if errors|length > 0 -%}
	    <div class="text-danger text-left">
	        {%- for error in errors -%}
	            {{ error.message }}
	        {%- endfor -%}
	    </div>
    {%- endif -%}
{% endblock form_errors %}