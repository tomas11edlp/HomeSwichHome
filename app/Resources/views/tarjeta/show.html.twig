{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tarjetum</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tarjetum.id }}</td>
            </tr>
            <tr>
                <th>Titular</th>
                <td>{{ tarjetum.titular }}</td>
            </tr>
            <tr>
                <th>Marca</th>
                <td>{{ tarjetum.marca }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ tarjetum.numero }}</td>
            </tr>
            <tr>
                <th>Codigo</th>
                <td>{{ tarjetum.codigo }}</td>
            </tr>
            <tr>
                <th>Fechavto</th>
                <td>{% if tarjetum.fechaVto %}{{ tarjetum.fechaVto|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tarjeta_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tarjeta_edit', { 'id': tarjetum.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
