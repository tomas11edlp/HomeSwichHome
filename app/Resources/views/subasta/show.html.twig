{% extends 'base.html.twig' %}

{% block body %}
    <h1>Subastum</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ subastum.id }}</td>
            </tr>
            <tr>
                <th>Fechainicio</th>
                <td>{% if subastum.fechaInicio %}{{ subastum.fechaInicio|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fechafin</th>
                <td>{% if subastum.fechaFin %}{{ subastum.fechaFin|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fechareservainicio</th>
                <td>{% if subastum.fechaReservaInicio %}{{ subastum.fechaReservaInicio|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fechareservafin</th>
                <td>{% if subastum.fechaReservaFin %}{{ subastum.fechaReservaFin|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Montobase</th>
                <td>{{ subastum.montoBase }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('subasta_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('subasta_edit', { 'id': subastum.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
