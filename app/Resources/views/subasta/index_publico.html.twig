{% extends '@Pg/Paginator/tableinline.html.twig' %}

{% block title %}
    <h2>Subastas en curso
    </h2>
{% endblock %}

{% block paginator_table_header %}
    {# <th></th> #}
    <th scope="col" class="">Propiedad</th>
    <th scope="col" class="">Semana a Reservar</th>
    <th scope="col" class="">Fecha fin de la subasta</th>
    <th scope="col" class=""> &Uacute;ltima oferta </th>
    <th scope="col"></th>
{% endblock %}

{% block paginator_table_data %}
    <td class="align-middle"><a href="{{path('propiedad_show_publico',{'id':entity.propiedad.id})}}" title="Detalles de la propiedad">{{ entity.propiedad }}</a></td>
    <td class="align-middle">{{ entity.semanaReserva }}/{{ entity.anioReserva }}</td>
    <td class="align-middle">{{ entity.fechaFin|date('d/m/Y') }}</td>
    <td class="align-middle">${{ entity.pujaGanadora.monto|default('-') }} - {{ entity.pujaGanadora.usuario.apellido|default('Perez') }}, {{ entity.pujaGanadora.usuario.nombre|default('Juan') }}</td>
    <td class="align-middle">
        {# <a class="text-info" href="{{path('subasta_show', {'id':entity.id}) }}"><i class="fas fa-eye"></i></a>
        <a class="text-info" href="{{path('subasta_edit', {'id':entity.id}) }}"><i class="fas fa-edit"></i></a>
        <a class="text-danger" href="{{path('subasta_delete', {'id':entity.id}) }}"><i class="fas fa-times"></i></a> #}
    </td>
{% endblock %}