{% extends 'base.html.twig' %}

{% block body %}
    <h1>Puja</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ puja.id }}</td>
            </tr>
            <tr>
                <th>Monto</th>
                <td>{{ puja.monto }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if puja.fecha %}{{ puja.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('puja_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
