{% extends 'base.html.twig' %}

{% block javascripts %}
    {{parent()}}

    <script type="text/javascript">
        $(document).ready(function(){
            $("#appbundle_usuario_email").attr('disabled', 'disabled');
        });
    </script>
    
{% endblock %}


{% block body %}

{{ form_start(edit_form) }}

<div class="container-fluid">
    <div class="row justify-content-center mb-3 text-center">
        <div class="col">
            <h3>
                Modificar perfil
            </h3>
        </div>
    </div>

    <div class="row justify-content-center mb-3 text-center">
        <div class="col-3">
            {{ form_row(edit_form.email) }}
        </div>
    </div>
    <div class="row justify-content-center mb-3 text-center">
        <div class="col-3">
            {{ form_row(edit_form.plainPassword) }}
        </div>
    </div>
    <div class="row justify-content-center mb-3 text-center">
        <div class="col-3">
            {{ form_row(edit_form.nombre) }}
        </div>
    </div>
    <div class="row justify-content-center mb-3 text-center">
        <div class="col-3">
            {{ form_row(edit_form.apellido) }}
        </div>
    </div>
    <div class="row justify-content-center mb-3 text-center">
        <div class="col-3">
            {{ form_row(edit_form.fechaNacimiento) }}
        </div>
    </div>    
        

    </div>
    <div class="row justify-content-center mt-5">
        <div class="col-2 text-center">
            <div class="row justify-content-around">
                <a class="btn btn-secondary" href="{{path('perfil_cliente_show', {id : usuario.id})}}">Cancelar</a>
                <button class="btn btn-success" type='submit'>Confirmar</button>
            </div>
        </div>
    </div>
</div>
{{ form_end(edit_form) }}


{% endblock %}
