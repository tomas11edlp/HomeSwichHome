{% extends '@Pg/Paginator/tableinline.html.twig' %}

{% block title %}
    <h2 class="mb-5">Administradores
        <a class="btn btn-outline-success ml-2" href="{{ path('administrador_new') }}">Nueva</a>
    </h2>
{% endblock %}

{% block paginator_table_header %}
    {# <th></th> #}
    <th scope="col" class="">Nombre</th>
    <th scope="col" class="">Apellido</th>
    <th scope="col" class="">Email (Username)</th>
    <th scope="col"></th>
{% endblock %}

{% block paginator_table_data %}
    <td class="align-middle">{{ entity.nombre }}</td>
    <td class="align-middle">{{ entity.apellido }}</td>
    <td class="align-middle">{{ entity.email }}</td>
    <td class="align-middle">
        <a class="ml-4 text-info" href="{{path('usuario_show', {'id':entity.id}) }}" title="Ver"><i title="Ver cliente" class="fas fa-eye"></i></a>
        <a class="ml-4 text-info" href="{{path('administrador_edit', {'id':entity.id}) }}" title="Modificar"><i class="fas fa-edit"></i></a>
        <a class="ml-4 text-danger" href="{{path('administrador_delete', {'id':entity.id}) }}" title="Eliminar Usuario" onclick="return confirm('El sistema eliminará el usuario ¿Desea continuar?')"><i class="fas fa-trash"></i></a>
    </td>

{% endblock %}

{% block javascripts %}
    {{parent()}}

    <script src="{{ asset('lib/select2/js/select2.min.js') }}"></script>

    <script type="text/javascript">
        
        $(document).ready(function(){
    
            $('.datepicker').datepicker({
                format: 'dd/mm/yyyy',
                startDate: '-3d'
            });
        });

    </script>
    
{% endblock %}

{% block stylesheets %}
    {{parent()}}     
    
    <link href="{{ asset('libs/select2/css/select2.min.css') }}" rel="stylesheet">       
    <link rel="stylesheet" href="{{ asset('libs/bootstrap/css/bootstrap-datetimepicker.css') }}">
        
{% endblock %}