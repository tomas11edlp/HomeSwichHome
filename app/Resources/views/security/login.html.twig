{% extends 'base.html.twig' %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript">
        $('#btnIngresar').hide();
    </script>
{% endblock %}

{% block body %}

	<div class="row ">
		<div class="col-4 ">
		</div>
		<div class="col-4">
			{% if error %}
				<div class="alert alert-danger alert-bordered" role="alert">
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">Ã—</span>
					</button>
					<div class="d-flex align-items-center justify-content-start">
						<span>Usuario o clave incorrecto</span>
					</div><!-- d-flex -->
				</div><!-- alert -->
			{% endif %}

			<form action="{{ path('login') }}" method="post" autocomplete="off">
				<div class="form-group">
					<input type="text" class="form-control" id="username" name="_username" value="" placeholder="Usuario" autocomplete="off">
				</div><!-- form-group -->
				<div class="form-group">
					<input type="password" class="form-control" id="password" name="_password" value="" placeholder="Clave" autocomplete="off">
				</div><!-- form-group -->
				<br>
				<br>
				<button type="submit" class="btn btn-info btn-block">Ingresar</button>
			</form>
		</div>
	</div>

{% endblock %}